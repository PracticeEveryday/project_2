{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Swagger for Cocktail API",
    "description": "Open API docs with Swagger",
    "license": { "name": "MIT", "url": "http://localhost:5000" }
  },
  "host": "localhost:5000",
  "basePath": "/",
  "tags": [
    { "name": "User", "description": "User 로그인, 회원가입 API" },
    { "name": "Cocktail", "description": "칵테일 조회 API" },
    { "name": "User Cocktail", "description": "유저 칵테일 CRUD API" }
  ],
  "schemes": ["HTTP"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/": { "get": { "tags": ["Main"], "summary": "Main Page Get", "responses": { "200": { "description": "OK" } } } },
    "/cocktails/{name}": {
      "get": {
        "tags": ["Cocktail"],
        "summary": "특정 칵테일 조회",
        "parameters": [{ "in": "path", "name": "name" }],
        "responses": { "201": { "description": "OK" }, "404": { "description": "Failed. Bad Request" } }
      }
    },
    "/cocktails": {
      "get": {
        "tags": ["Cocktail"],
        "summary": "칵테일 전체 조회",
        "responses": { "201": { "description": "OK" }, "404": { "description": "Failed. Bad Request" } }
      }
    },
    "/cocktail": {
      "post": {
        "tags": ["Cocktail"],
        "summary": "칵테일 정보 입력",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "ingredient": "body",
            "imageUrl": "body",
            "taste": "body",
            "description": "body",
            "userId": "body"
          },
          {
            "name": "Authorization",
            "in": "header",
            "description": "JWT access token",
            "required": true,
            "type": "string"
          }
        ],
        "responses": { "201": { "description": "OK" }, "404": { "description": "Failed. Bad Request" } }
      }
    },
    "/cocktail/{name}": {
      "delete": {
        "tags": ["Cocktail"],
        "summary": "칵테일 정보 삭제",
        "parameters": [
          { "in": "path", "name": "name" },
          {
            "name": "authorization",
            "in": "header",
            "description": "JWT access token",
            "required": true,
            "type": "string"
          }
        ],
        "responses": { "201": { "description": "OK" }, "404": { "description": "Failed. Bad Request" } }
      }
    },
    "/register": {
      "post": {
        "tags": ["User"],
        "summary": "register user Post",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "email": "body",
            "password": "body",
            "schema": { "$ref": "#/definitions/User" }
          }
        ],
        "responses": { "201": { "description": "OK" }, "404": { "description": "Failed. Bad Request" } }
      }
    },
    "/login": {
      "post": {
        "tags": ["User"],
        "summary": "login user Post",
        "parameters": [
          {
            "in": "body",
            "email": "body",
            "password": "body",
            "required": true,
            "schema": { "$ref": "#/definitions/User" }
          }
        ],
        "responses": { "201": { "description": "OK" }, "404": { "description": "Failed. Bad Request" } }
      }
    }
  },
  "definitions": {
    "Cocktail": {
      "properties": {
        "name": { "type": "string" },
        "ingredient": { "type": "[string]" },
        "imageUrl": { "type": "string" },
        "rank": { "type": "Schema.Types.ObjectId" }
      }
    },
    "User": {
      "properties": { "email": { "type": "string" }, "password": { "type": "string" }, "name": { "type": "string" } }
    }
  }
}
